<h1>Edit Ideas</h1>
<div class="card card-body">
  <form class="" action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="title" value="{{idea.title}}" required>
    </div>
    <div class="form-group">
      <label>Body</label>
      <textarea class="form-control" name="body" rows="8" cols="40" required>{{idea.body}}</textarea>
    </div>
    <input type="hidden" name="_method" value="PUT">
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>
