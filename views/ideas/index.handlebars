<h1>Ideas Index</h1>

{{#each ideas}}
<div class="card card-body mb-2">
  <h4>{{title}}</h4>
  <p>{{body}}</p>
  <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
  <form class="" action="/ideas/{{id}}?_method=DELETE" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-danger btn-block" type="submit" name="button">Delete</button>
  </form>
</div>
{{else}}
<p>Sorry, no video ideas listed :C</p>
{{/each}}
